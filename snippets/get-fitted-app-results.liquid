<div id="get-fitted-app-results" class="app get-fitted get-fitted-app mfp-hide">
  <div class="app__wrapper">
    <div class="results__loader js-results-loader">
      <h3 class="results-loader__title">COMPUTING YOUR BODY MEASUREMENTS</h3>
      <h3 class="results-loader__powered">POWERED BY</h3>
      <img src="{{ 'fashion-metrics-logo.jpg' | asset_url }}" class="results-loader__image">
    </div>
    <span class="app__quit"><span class="mfp-close app__quit-icon custom--close js-reset-get-fitted"></span></span>
    <div class="app__container">
      <div class="app__content no-slide">
        <section class="step-slide">
          <h2 class="step-slide__heading left">YOUR CUSTOM SIZING <!--<span class="hint--bottom-right hint--large" aria-label="Etiam aliquam sem ac velit feugiat elementum. Nunc eu elit velit, nec vestibulum nibh. Curabitur ultrices, diam non ullamcorper blandit, nunc lacus ornare nisi, egestas."><span class="app__info custom--info"></span></span>--></h2>
          <p class="step-slide__subtitle">All measurements are in <strong>INCHES</strong>.</p>
          <div class="step-slide__wrapper">
            <div class="get-fitted__results">
              <div class="get-fitted__result">
                <h3 class="result__type">JACKET</h3>
                <article class="result-box result-color__gray">
                  <h4 class="result-details"><span class="result-value js-result-neck">0</span> NECK</h4>
                </article>
                <article class="result-box result-color__turquoise">
                  <h4 class="result-details"><span class="result-value js-result-shoulder">0</span> SHOULDER</h4>
                </article>
                <article class="result-box result-color__green">
                  <h4 class="result-details"><span class="result-value js-result-bicep_circumference">0</span> BICEP CIRCUMFERENCE</h4>
                </article>
                <article class="result-box result-color__purple">
                  <h4 class="result-details"><span class="result-value js-result-jacket_length">0</span> JACKET LENGTH</h4>
                </article>
                <article class="result-box result-color__blue">
                  <h4 class="result-details"><span class="result-value js-result-sleeves_length">0</span> SLEEVES LENGTH</h4>
                </article>
                <article class="result-box result-color__red">
                  <h4 class="result-details"><span class="result-value js-result-chest">0</span> CHEST</h4>
                </article>
                <article class="result-box result-color__orange">
                  <h4 class="result-details"><span class="result-value js-result-jacket_waist">0</span> WAIST</h4>
                </article>
              </div>
              <div class="get-fitted__result">
                <h3 class="result__type">PANTS</h3>
                <article class="result-box result-color__turquoise">
                  <h4 class="result-details"><span class="result-value js-result-pants_waist">0</span> WAIST</h4>
                </article>
                <article class="result-box result-color__green">
                  <h4 class="result-details"><span class="result-value js-result-pants_hips">0</span> PANTS HIPS</h4>
                </article>
                <article class="result-box result-color__orange">
                  <h4 class="result-details"><span class="result-value js-result-outseam_length">0</span> OUTSEAM LENGTH</h4>
                </article>
                <article class="result-box result-color__blue">
                  <h4 class="result-details"><span class="result-value js-result-crotch">0</span> CROTCH</h4>
                </article>
                <article class="result-box result-color__red">
                  <h4 class="result-details"><span class="result-value js-result-pants_thighs">0</span> PANTS THIGHS</h4>
                </article>
                <article class="result-box result-color__purple">
                  <h4 class="result-details"><span class="result-value js-result-knee">0</span> KNEE</h4>
                </article>
              </div>
              <img src="{{ 'size-graph.png' | asset_url }}" class="result__image desktop--only">
            </div>
            <span class="result__btn button button--primary mfp-close js-reset-get-fitted">Return to Store</span>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
