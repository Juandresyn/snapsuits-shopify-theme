<script type="text/javascript">
  $(document).on('ready', function(){
    var $slider = $('.js-get-fitted-slider, .js-app-slider');
    $('.js-get-fitted-popup, .js-app-popup').on('click', function(){
      $('.js-get-fitted-slider.slick-initialized, .js-app-slider.slick-initialized').slick('unslick');
      setTimeout(function() {
        if ($slider.hasClass('slick-initialized')) {
          $slider.slick('unslick');
        }
        $slider.slick({
          draggable: false,
          arrows: false,
          infinite: false,
          touchMove: false,
          adaptiveHeight: true
        });
        console.log('reinit-true');
        setTimeout(function() {
          $slider.slick('reinit');
        },10);
      },200);

    });
  });
</script>
