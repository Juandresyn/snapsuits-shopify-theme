    {% for article in blogs["news"].articles limit: 3 %}
      <li class="single-post">
        <a href="{{ article.url }}">
          <div class="indexblog__img" style="background-image: url('{% if article.image %}{{ article | img_url: 'grande' }}{% endif %}');"></div>
        </a>
        <h3 class="article-title"><span>{{ article.title }}</span></h3>
        <p class="text--regular">
          {% if article.excerpt.size > 0 %}
            {{ article.excerpt }}
          {% else %}
            {{ article.content | strip_html | truncatewords: 30 }}
          {% endif %}
        </p>
        <a href="{{ article.url }}" class="button button-white">Read More</a>
